{
  "hooks": {
    "userPromptSubmit": [
      {
        "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] User: $USER_PROMPT\" >> \"$CLAUDE_PROJECT_DIR\"/.claude/session.log"
      }
    ],
    "preToolUse": [
      {
        "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/commit-validator.sh \"$TOOL_INPUT\"",
        "toolMatchers": ["Bash:git commit"]
      }
    ],
    "postToolUse": [
      {
        "command": "echo \"[$(date '+%Y-%m-%d %H:%M:%S')] Tool: $TOOL_NAME\" >> \"$CLAUDE_PROJECT_DIR\"/.claude/session.log",
        "toolMatchers": ["Write", "Edit"]
      }
    ]
  }
}
